#!/bin/bash
# insta485db

# Stop on errors
# See https://vaneyckt.io/posts/safer_bash_scripts_with_set_euxo_pipefail/
set -Eeuo pipefail

# Sanity check command line options
usage() {
  echo "Usage: $0 (create|destroy|reset|dump)"
}

if [ $# -ne 1 ]; then
  usage
  exit 1
fi

# Parse argument.  $1 is the first argument
case $1 in
  "create")

  if [ -d var/ ]
  then
      echo "Error: database already exists"
  else
    mkdir var/
    echo "+ mkdir var/"
    sqlite3 var/fantasyApp.sqlite3 < sql/schema.sql
    echo "+ sqlite3 var/fantasyApp.sqlite3 < sql/schema.sql"
    python fantasyApp/manager.py fillDBs
    echo "+ python fantasyApp/manager.py fillDBs"
  fi
    ;;

  "destroy")
    rm -r var/
    echo "+ rm var/"
    ;;

  "reset")
    rm -r var/
    echo "+ rm var/"
    mkdir var/
    echo "+ mkdir var/"
    sqlite3 var/fantasyApp.sqlite3 < sql/schema.sql
    echo "+ sqlite3 var/fantasyApp.sqlite3 < sql/schema.sql"
    python fantasyApp/manager.py fillDBs
    echo "+ python fantasyApp/manager.py fillDBs"
    ;;

  "dump")
    sqlite3 -batch -line var/fantasyApp.sqlite3 'SELECT * FROM teams'
    # sqlite3 -batch -line var/fantasyApp.sqlite3 'SELECT * FROM history'
    ;;
  *)
    usage
    exit 1
    ;;
esac
